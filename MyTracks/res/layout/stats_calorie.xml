<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  style="@style/StatsLargeItemContainer" >
  <!-- Label -->
  <TextView
    android:id="@+id/stats_label"
    style="@style/StatsLargeLabel" />
  <!-- Value container -->
  <LinearLayout style="@style/StatsLargeValueContainer" >
    <!-- Value -->
    <TextView
      android:id="@+id/stats_value"
      style="@style/StatsLargeValue" />
    <!-- Unit -->
    <TextView
      android:id="@+id/stats_unit"
      style="@style/StatsUnit" />
    <!-- Activity type -->
    <Spinner
      android:id="@+id/stats_activity_type_icon"
      android:layout_height="wrap_content"
      android:layout_marginLeft="4dp"
      android:layout_width="wrap_content" />
  </LinearLayout>
</LinearLayout>